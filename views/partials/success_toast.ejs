<% if (locals.success_msg) { %>
  <div
    class="absolute top-1 left-0 border-l-2 border-r-2 max-w-6xl m-auto border-green-500 right-0 p-3 text-green-500 bg-[#6eb3a9]/50"
    id="error-card"
  >
    <span class="font-serif font-semibold"><%= locals.success_msg %></span>
    <button
      class="absolute font-rubik right-1 top-1 bottom-1 cursor-pointer text-4xl"
    >
      &times;
    </button>
  </div>
  <% } %>
  